{
  "manifest_version": 3,
  "name": "Fallen London Quests",
  "version": "1.0.0",
  "description": "Adds a quest tracker to the game Fallen London.",
  "icons": {
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["https://www.fallenlondon.com/*"],
      "js": [
        "quality-tracker.js",
        "request-interceptor.js",
        "data/quests-datatypes.js",
        "settings.js",
        "quests/quests-manager.js",
        "style-inserter.js",
        "modal.js",
        "modal-rendering.js",
        "button-inserter.js",
        "exporter/csv-builder.js",
        "exporter/qualities-to-csv.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["quests/quests.json"],
    "matches": ["https://www.fallenlondon.com/*"]
  }]
}